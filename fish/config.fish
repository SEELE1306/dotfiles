# Alias's to modified commands
alias dots='cd ~/dotfiles/'
alias conf='micro ~/.config/fish/config.fish'
alias ffconf='micro ~/.config/fastfetch/config.jsonc'
#alias cd='cd && ls'
alias cp='cp -i'
